{
  "name": "vitepress-plugin-helper",
  "private": false,
  "version": "0.0.3",
  "description": "A Vitepress plugin that helps generate nav and sidebars and watch MarkDown file changes to restart the service",
  "type": "module",
  "author": "PeiYanlu",
  "license": "MIT",
  "main": "./dist/helper.cjs",
  "module": "./dist/helper.js",
  "types": "./dist/helper.d.ts",
  "exports": {
    "types": "./dist/helper.d.ts",
    "import": "./dist/helper.js",
    "require": "./dist/helper.cjs"
  },
  "bin": {
    "vitepress-helper": "bin/vitepress-helper.js"
  },
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin esbuild"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "commander": "^10.0.1",
    "fast-glob": "^3.2.12",
    "gray-matter": "^4.0.3",
    "chalk": "^5.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/node": "^20.2.5",
    "rollup": "^3.23.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:peiyanlu/vitepress-helper.git"
  },
  "homepage": "https://github.com/peiyanlu/vitepress-helper/tree/dev/packages/helper#readme",
  "bugs": {
    "url": "https://github.com/peiyanlu/vitepress-helper/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "bin",
    "img",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "vitepress",
    "helper",
    "sidebar",
    "nav",
    "auto"
  ]
}
