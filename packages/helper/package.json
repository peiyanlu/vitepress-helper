{
  "name": "vitepress-plugin-helper",
  "private": false,
  "version": "1.0.2",
  "description": "A VitePress plugin that helps generate nav and sidebars and watch MarkDown file changes to restart the service",
  "type": "module",
  "author": "PeiYanlu",
  "license": "MIT",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "scripts": {
    "build:tsc": "tsc -p ./tsconfig.json",
    "build": "rollup --config rollup.config.ts --configPlugin esbuild --watch"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "vite": "^5.4.14"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/node": "^22.10.1",
    "rollup": "4.22.4",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:peiyanlu/vitepress-helper.git"
  },
  "homepage": "https://github.com/peiyanlu/vitepress-helper/tree/dev/packages/helper#readme",
  "bugs": {
    "url": "https://github.com/peiyanlu/vitepress-helper/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "lib",
    "img",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "vitepress",
    "helper",
    "sidebar",
    "nav",
    "auto"
  ]
}
