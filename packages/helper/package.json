{
  "name": "vitepress-plugin-helper",
  "private": false,
  "version": "1.0.2",
  "description": "A VitePress plugin that helps generate nav and sidebars and watch MarkDown file changes to restart the service",
  "type": "module",
  "author": "PeiYanlu",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json --watch"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "vite": "^5.4.14"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:peiyanlu/vitepress-helper.git"
  },
  "homepage": "https://github.com/peiyanlu/vitepress-helper/tree/dev/packages/helper#readme",
  "bugs": {
    "url": "https://github.com/peiyanlu/vitepress-helper/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "lib",
    "img",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "vitepress",
    "helper",
    "sidebar",
    "nav",
    "auto"
  ]
}
